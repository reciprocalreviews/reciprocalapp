{
	"useTabs": true,
	"singleQuote": true,
	"trailingComma": "none",
	"printWidth": 100,
	"plugins": ["prettier-plugin-svelte", "prettier-plugin-sql"],
	"pluginSearchDirs": ["."],
	"overrides": [
		{ "files": "*.svelte", "options": { "parser": "svelte" } },
		{
			"files": ["*.sql"],
			"options": {
				"language": "postgresql",
				"keywordCase": "lower",
				"dataTypeCase": "lower",
				"functionCase": "lower",
				"indentWidth": 2,
				"linesBetweenQueries": 1,
				"denseOperators": true
			}
		}
	]
}
